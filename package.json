{
  "name": "single-page-app",
  "version": "1.0.0",
  "description": "Single Page App",
  "repository": "https://github.com/GiovanniDw/web-app-from-scratch-2223.git",
  "author": "Giovanni",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/server/server.js",
    "dev": "NODE_ENV=development nodemon src/server/server.js -w src/server",
    "build": "yarn build:server && yarn build:client",
    "preview": "vite preview",
    "deploy": "deploy.sh",
    "build:client": "vite build --outDir docs/client",
    "build:server": "vite build --outDir docs/server --ssr src/server/server.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.2",
    "gsap": "^3.11.4",
    "vite-express": "*"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "vite": "^4.1.1"
  }
}
